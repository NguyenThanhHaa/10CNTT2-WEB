@page
@model RegisterModel

@{
    ViewBag.Title = "SignUp";
}
@* Sign Up *@

<link href="~/css/Register.css" rel="stylesheet" />

<div class="background">
    <div class="brand-background">
        <h1 class="bread-space">Bread Space </h1>
    </div>

    <div class="info">
        <!-- Sign Up -->
        <div class="sign-up">
            Sign Up
        </div>
        <!-- Create account -->
        <div class="create-acc">
            Create account
        </div>

        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @*First name, last name*@
            <div class="name">

                <div class="form-floating">
                    <input asp-for="Input.Firstname" class="form-control" autocomplete="firstname" aria-required="true" />
                    <label asp-for="Input.Firstname">First Name</label>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Lastname" class="form-control" autocomplete="lastname" aria-required="true" />
                    <label asp-for="Input.Lastname">Last Name</label>
                </div>


            </div>
            <div class="user-info">
                <div class="email">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="password">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="confirm-password">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

            </div>




            <!-- Have account -->
            <div class="have-acc-div">
                <p>Have account,</p>
                <a class="login-link" href="/Identity/Account/Login">Login</a> <!-- target = "_blank" -> chuyển tag mới  -->
            </div>

            <!-- Button -->

            <button class="btn" type="submit">Create</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
